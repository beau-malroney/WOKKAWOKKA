{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "SDL Game Runner",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/main.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],     
            "externalConsole": true,       
            "MIMode": "gdb",
            "miDebuggerPath": "${workspaceRoot}/external/compiler/mingw64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enably pretty printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build"
        }
    ]
}